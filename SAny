<div class="chat-container">
    <div class="header">ü§ñ ‡¶Ü‡¶°‡ßç‡¶°‡¶æ‡¶¨‡¶æ‡¶ú ‡¶¨‡¶®‡ßç‡¶ß‡ßÅ</div>
    <div id="chat-window">
        <div class="message bot">‡¶ï‡¶ø‡¶∞‡ßá ‡¶¨‡¶®‡ßç‡¶ß‡ßÅ! ‡¶ï‡ßÄ ‡¶ñ‡¶¨‡¶∞? ‡¶Ö‡¶®‡ßá‡¶ï ‡¶¶‡¶ø‡¶® ‡¶™‡¶∞ ‡¶¶‡ßá‡¶ñ‡¶æ ‡¶π‡¶≤‡ßã‡•§ ‡¶Ü‡¶°‡ßç‡¶°‡¶æ ‡¶¶‡¶ø‡¶¨‡¶ø?</div>
    </div>
    <div id="typing-status" class="typing" style="padding-left: 20px;">‡¶¨‡¶®‡ßç‡¶ß‡ßÅ ‡¶ü‡¶æ‡¶á‡¶™ ‡¶ï‡¶∞‡¶õ‡ßá...</div>
    <div class="input-area">
        <input type="text" id="user-input" placeholder="‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶≤‡ßá‡¶ñ‡ßã..." onkeypress="handleKeyPress(event)">
        <button onclick="sendMessage()">‚ûî</button>
    </div>
</div>

<script type="module">
    // Google AI ‡¶≤‡¶æ‡¶á‡¶¨‡ßç‡¶∞‡ßá‡¶∞‡¶ø ‡¶á‡¶Æ‡¶™‡ßã‡¶∞‡ßç‡¶ü ‡¶ï‡¶∞‡¶æ
    import { GoogleGenerativeAI } from "https://esm.run/@google/generative-ai";

    // ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶¶‡ßá‡¶ì‡ßü‡¶æ API Key ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶∏‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá
    const API_KEY = "AIzaSyAoL61-RHYQpw4mntkeyVUC2V_1n7L6Npo";
    const genAI = new GoogleGenerativeAI(API_KEY);
    
    // AI ‡¶è‡¶∞ ‡¶ö‡¶∞‡¶ø‡¶§‡ßç‡¶∞ ‡¶¨‡¶æ ‡¶¨‡ßç‡¶Ø‡¶ï‡ßç‡¶§‡¶ø‡¶§‡ßç‡¶¨ ‡¶†‡¶ø‡¶ï ‡¶ï‡¶∞‡¶æ
    const model = genAI.getGenerativeModel({ 
        model: "gemini-1.5-flash",
        systemInstruction: "‡¶§‡ßÅ‡¶Æ‡¶ø ‡¶è‡¶ï‡¶ú‡¶® ‡¶ñ‡ßÅ‡¶¨ ‡¶Æ‡¶ú‡¶æ‡¶∞ ‡¶è‡¶¨‡¶Ç ‡¶Ü‡¶®‡ßç‡¶§‡¶∞‡¶ø‡¶ï ‡¶¨‡¶®‡ßç‡¶ß‡ßÅ‡•§ ‡¶®‡¶æ‡¶Æ '‡¶¨‡¶®‡ßç‡¶ß‡ßÅ'‡•§ ‡¶§‡ßÅ‡¶Æ‡¶ø ‡¶∏‡¶¨‡¶∏‡¶Æ‡ßü ‡¶∂‡ßÅ‡¶¶‡ßç‡¶ß ‡¶ì ‡¶∏‡¶π‡¶ú ‡¶¨‡¶æ‡¶Ç‡¶≤‡¶æ‡ßü ‡¶ï‡¶•‡¶æ ‡¶¨‡¶≤‡¶¨‡ßá‡•§ ‡¶¨‡¶®‡ßç‡¶ß‡ßÅ‡¶¶‡ßá‡¶∞ ‡¶Æ‡¶§‡ßã ‡¶Ü‡¶°‡ßç‡¶°‡¶æ ‡¶¶‡ßá‡¶¨‡ßá‡•§"
    });

    const chat = model.startChat({ history: [] });

    // ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶™‡¶æ‡¶†‡¶æ‡¶®‡ßã‡¶∞ ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
    window.sendMessage = async function() {
        const input = document.getElementById("user-input");
        const chatWindow = document.getElementById("chat-window");
        const typingStatus = document.getElementById("typing-status");
        const text = input.value.trim();

        if (!text) return;

        // ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶ø‡¶®‡ßá ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
        appendMessage("user", text);
        input.value = "";
        typingStatus.style.display = "block";

        try {
            const result = await chat.sendMessage(text);
            const response = await result.response;
            const reply = response.text();
            
            typingStatus.style.display = "none";
            appendMessage("bot", reply);
        } catch (error) {
            console.error(error);
            typingStatus.style.display = "none";
            appendMessage("bot", "‡¶¶‡ßã‡¶∏‡ßç‡¶§, ‡¶®‡ßá‡¶ü‡ßá ‡¶¨‡¶æ ‡¶è‡¶™‡¶ø‡¶Ü‡¶á-‡¶§‡ßá ‡¶è‡¶ï‡¶ü‡ßÅ ‡¶ù‡¶æ‡¶Æ‡ßá‡¶≤‡¶æ ‡¶π‡¶ö‡ßç‡¶õ‡ßá‡•§ ‡¶®‡¶§‡ßÅ‡¶® ‡¶ï‡¶ø ‡¶¨‡ßç‡¶Ø‡¶¨‡¶π‡¶æ‡¶∞ ‡¶ï‡¶∞‡ßá ‡¶¶‡ßá‡¶ñ ‡¶§‡ßã?");
        }
    };

    window.handleKeyPress = function(event) {
        if (event.key === "Enter") {
            sendMessage();
        }
    }

    function appendMessage(sender, text) {
        const chatWindow = document.getElementById("chat-window");
        const msgDiv = document.createElement("div");
        msgDiv.className = `message ${sender}`;
        msgDiv.innerText = text;
        chatWindow.appendChild(msgDiv);
        chatWindow.scrollTop = chatWindow.scrollHeight;
    }
</script>

